<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add">
	<button class="btn btn-success">Nova Categoria</button>
</a>


{{#each categoria}}
<div class="card mt-4">
	<div class="card-body">
		<h4>{{nome}}</h4>
		<small>Slug: {{slug}}</small><br>
		<small>data: {{date}}</small><br>
		<a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a>
		<form action="/admin/categorias/deletar" method="POST">
			<input type="hidden" name="id" value="{{_id}}">
			<button type="submit" class="btn btn-danger mt-2">DELETAR CATEGORIA</button>
		</form>
	</div>
</div>
{{else}}
	<h3 class="mt-3">Nenhuma categoria encontrada !</h3>
{{/each}}
