{{#each erros}}
	<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card">
	<div class="card-body">
		<h4>Nova Postagem</h4>
		<form action="/admin/Postagem/salvar" method="POST">
			<label for="titulo">Titulo</label>
			<input type="text" name="titulo" class="form-control ">

			<label for="slug">Slug</label>
			<input type="text" name="slug" class="form-control">

			<label for="descricao">Descrição</label>
			<input type="text" name="descricao" class="form-control">

			<label for="conteudo">Conteudo</label>
			<textarea type="text" name="conteudo" class="form-control"></textarea> 


			<label for="categoria">Categoria</label>
			<select name="categoria" class="custom-select">
				<option value="">SELECIONE</option>
				{{#each categoria}}
				<option value="{{_id}}">{{nome}}</option>
				{{else}}
				<option value="0">Nanhuma categoria cadastrada</option>
				{{/each}}
			</select>

			<button type="submit" class="btn btn-success mt-2"> Cadastrar</button>			
		</form>
	</div>	
</div>