<div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}
<h3>Editar Categoria :</h3>
<form action="/admin/categoria/edit"method="post">
    <input type="hidden" value="{{categoria._id}}" name="id">
	<div class="form-row">
			<div class="form-group col-md-6">
				<label for="nome">Nome</label>
				<input type="text" class="form-control" name="nome" value="{{categoria.nome}}" id="nome" placeholder="Insira a Categoria">
			</div>
			<div class="form-group col-md-6">
				<label for="slug">Slug</label>
				<input type="text" class="form-control" name="slug" id="slug" value="{{categoria.slug}}" placeholder="Slug">
			</div>

			<button type="submit"  class="btn btn-success">SALVAR</button>
	</div>
</form>