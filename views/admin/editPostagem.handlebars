{{#each erros}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
{{Postagem}}
<div class="card">
	<div class="card-body">
		<h4>Edit Postagem : {{Postagem.titulo}}</h4>
		<form action="/admin/Postagem/salvar" method="POST">
			<input type="hidden" name="id" value="{{Postagem._id}}">
			<label for="titulo">Titulo</label>
			<input type="text" name="titulo" value="{{Postagem.titulo}}" class="form-control ">

			<label for="slug">Slug</label>
			<input type="text" name="slug" value="{{Postagem.slug}}" class="form-control">

			<label for="descricao">Descrição</label>
			<input type="text" name="descricao" value="{{Postagem.descricao}}" class="form-control">

			<label for="conteudo">Conteudo</label>
			<textarea type="text" name="conteudo" value="" class="form-control">{{Postagem.conteudo}}</textarea>

		<label for="categoria">Categoria</label>
			<select name="categoria" class="custom-select">
				{{#each Categorias}}
				<option value="{{_id}}">{{nome}}</option>
				{{else}}
				<option value="0">Nanhuma categoria cadastrada</option>
				{{/each}}
			</select>
			<button type="submit" class="btn btn-success mt-2"> Editar</button>
		</form>
	</div>
</div>