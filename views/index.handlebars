{{#each Postagem}}
<div class="card mt-4">
  <div class="card-body">
    <h3>{{titulo}}</h3>
    <p>{{descricao}}</p>
    <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
    <hr>
    <small>Categoriia : {{categoria.nome}}</small>
     <small> Data : {{categoria.date}}</small:>
  </div>

</div>

{{else}}
<h4>Nenhuma postagem recente</h4>
{{/each}}